	<section class="user_container">
	  <% if((typeof msg==="undefined")) {%>
	  <div class="msg"><span></span></div>
	  <%}else {%>
	  <div class="msg"><span><%= msg%></span></div>
	  <%}%>
	   <div class="profile_img d-flex align-items-center  justify-content-center">
      		<img src="/rider/profile/<%= rider.profile%>" class="user_img" alt="profile">
	  </div>
	  <form novalidate="" class="container form_container-wrapper" method="post" action="/rider/profile" enctype="multipart/form-data">
	    <div class="form_container-in">
	      <div class="form_container-in-left">
	        <div class="form-group">
	          <label class="form-label" for="formBasicName">Name</label>
	          <input value="<%=rider.name %>" placeholder="Enter Name" type="text" id="formBasicName" class="form-control" name="name" required>
	        </div>

	        <div class="form-group">
	          <label class="form-label" for="formBasicEmail">Email address</label>
	          <input value="<%=rider.email %>" placeholder="Enter email" required type="email" id="formBasicEmail" class="form-control" name="email" required>
	        </div>

	        <div class="form-group">
	          <label class="form-label" for="formBasicPassword">Old Password</label>
	          <input placeholder="Old Password" type="password" id="formBasicPassword" class="form-control" name="password" required>
	        </div>

	        <div class="form-group">
	          <label class="form-label" for="formBasicPassword">New Password<span class="text-muted">(optional)</span></label>
	          <input placeholder="New password" type="password" id="formBasicPassword" class="form-control" name="new_password">
	        </div>

	        <div class="form-group">
	          <label>Date of birth</label>
	          <% var dates=new Date(rider.date_of_birth);
                  var year=dates.getFullYear();
                  var month=dates.getMonth()+1;
                  var date=dates.getDate();
                  month =month<10?'0'+month:month;
                  date =date<10?'0'+date:date;
                 %>
	          <input type="date" name="date_of_birth" value="<%=year+'-'+month+'-'+date%>">
	        </div>


	      </div>
	      <div class="form_container-in-right">
	        <div class="form-group">
	          <label class="form-label" for="formBasicPhoneno">Gender</label>
	          <select id="Gender" name="gender">
	            <option value="male" <%= rider.gender==='male'?'selected':''%>>Male</option>
	            <option value="female" <%= rider.gender==='female'?'selected':''%>>Female</option>
	            <option value="other" <%= rider.gender==='other'?'selected':''%>>Other</option>
	          </select>
	        </div>
	        <div class="form-group">
	          <label class="form-label" for="formBasicPhoneno">Phone No</label>
	          <input value="<%= rider.phoneno %>" placeholder="Phone No" required type="number" id="formBasicPhoneno" class="form-control" name="phoneno">
	        </div>

	        <div class="form-group">
	          <label class="form-label" for="formBasicPhoneno">Whatsapp No</label>
	          <input value="<%=rider.whatsappno %>" placeholder="Whatsapp No" required type="number" id="formBasicPhoneno" class="form-control" name="whatsappno">
	        </div>

	        <div class="form-group">
	          <label class="form-label" for="formBasicPhoneno">License No</label>
	          <input value="<%=rider.licenseno %>" placeholder="License No" required type="text" id="formBasicPhoneno" class="form-control" name="licenseno">
	        </div>

	        <div class="form-group">
	          <label class="form-label" for="formBasicPhoneno">Driving Expereince</label>

	          <select id="drivingexpereince" name="drivingexpereince">
	            <option value="Less then year" <%= rider.drivingexpereince==='Less then year'?'selected':''%>>Less then year</option>
	            <option value="1-3 years" <%= rider.drivingexpereince==='1-3 years'?'selected':''%>>1-3 years</option>
	            <option value="5+ years" <%= rider.drivingexpereince==='5+ years'?'selected':''%>>5+ years</option>
	          </select>
	        </div>


	      </div>
	    </div>
	    <div class="form-group form_container-in-bottom">
	      <label class="form-label" for="formBasicPhoneno">Mini bio about yourself
	      </label>
	      <textarea class="form-control" name="bio" maxlength="500"><%=rider.bio %></textarea>
	    </div>

	    <div class="form-group form_container-in-bottom ">
	      <label class="form-label" for="formBasicPhoneno">profile</label>
	      <input type="file" name="profile">
	    </div>

	    <input type="submit" class="btn create_button" value="Update Account">

	  </form>
	</section>